{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "outDir": "./dist",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "resolveJsonModule": true,
  },
  "include": [
    "src",
    "vite-env.d.ts",
    "scripts/deploy.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}